{
  "extends": "eslint:recommended",
  "env": {
    "es6": false,
    "browser": true,
    "node": false
  },
  "globals": {
    "$": true,
    "_": true,
    "Backbone": true,
    "console": true,
    "location": true,
    "Symbol": true,
    "Promise": true,
    "CDP": true,
    "Hammer": true,
    "$M": true,
    "module": true,
    "require": true,
    "define": true,
    "exports": true
  },
  "rules": {
    "indent": "off",
    "semi": ["error", "always"],

    "require-yield": "off",

    "comma-dangle": "off",
    "no-cond-assign": "off",
    "no-unused-vars": ["error", {"args": "none", "varsIgnorePattern": "^TAG|^__|Touch" }],
    "no-extra-boolean-cast": "off",
    "no-constant-condition": "off",
    "no-console": "off"
  }
}
