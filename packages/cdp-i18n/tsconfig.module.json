{
  "extends": "./tsconfig.base.json",
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "node_modules/@types",
      "dist/@types"
    ],
    "types": [
      "jquery",
      "requirejs",
      "jasmine"
    ]
  },
  "include": [
    "exports/**/*.ts",
    "tests/unit/**/*.ts"
  ],
  "exclude": [
    "bin",
    "dist",
    "docs",
    "external",
    "src",
    "tasks",
    "obj"
  ]
}
